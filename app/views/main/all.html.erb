<div class="page-title">
	<h3> ALL CASE STUDIES </h3>
</div>
<div class="cases">
	<div class="case-study">
		<% @cases.each do |case_study| %>
			<div class="case-number">
				<h4><%= case_study.id %>. <%= case_study.title %><h4>
			</div>
			<div class="description">
				<%= case_study.description %>
			</div>
			<div class="link">
				<a href=<%= case_study.link %> target="_blank">Explore This Case</a> 
			</div>

			<br>
			<br>
		<% end %>
	</div>
</div>