<header>
	<h1> Civic Tech Curriculum </h1>
</header>
<div class="page-title">
	<h3> All Case Studies </h3>
</div>
<div class="cases">
	<div class="case-study">
		<% @cases.each do |case_study| %>
			<div class="case-number">
				<h4>Case Study #<%= case_study.id %><h4>
			</div>

			<h4>Title: <%= case_study.title %><h4>
			<h4>Description: <h4><%= case_study.description %>
			<div class="link">
				<a href=<%= case_study.link %> target="_blank">Link to Case</a> 
			</div>

			<br>
			<br>
		<% end %>
	</div>
</div>