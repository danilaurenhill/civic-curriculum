  <section class="questions">
    <div class="input1">
      <h3>What subject do you teach?</h3>
      <label>
      <select name="subject_id" class="turnintodropdown" id="subject_id">
        <option selected>Select</option>
        <% @subjects.each do |subj| %>
          <option value=<%= subj.name %>><%= subj.name %></option>
        <% end %>
      </select>
      </label>
      <h3>What grade level do you teach?</h3>
      <label>
      <select name="grade_id" id="grade_id">
        <option selected>Select</option>
        <% @grades.each do |grade| %>
          <option value=<%= grade.name %>><%= grade.name %></option>
        <% end %>
      </select>
      </label>
      <div class="radio">
        <h3>Which sectors interest you?</h3>
        <form action="demo_form.asp" method="get">
          <% @sectors.each do |sector| %>
          <input type="checkbox" name="sector" value=<%= sector.name %>> <%= sector.name %><br>
          <% end %>
        </form>
      </div>
    </div>
    <div class="input2">
      <h3>Are your students technical?</h3>
        Yes <input class="tech" type="radio" name="group1" value="yes">
        No <input class="tech" type="radio" name="group1" value="no">
        Maybe <input class="tech" type="radio" name="group1" value="maybe">
      <h3>Which problems interest you?</h3>
        <form action="demo_form.asp" method="get">
          <% @problems.each do |problem| %>
          <input type="checkbox" name="problem" value=<%= problem.name %>> <%= problem.name %><br>
          <% end %>
        </form>  
      <h3>Which tools interest you?</h3>
        <div class="radio">
          <form action="demo_form.asp" method="get">
            <% @tools.each do |tool| %>
              <input type="checkbox" name="tool" value=<%= tool.name %>> <%= tool.name %><br>
              <span></span>
            <% end %>
          </form>
        </div>
      <div class="submit">
        <a href="#">Submit</a>
      </div>
    </div>
  </section>
  
